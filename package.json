{
    "private": true,
    "scripts": {
        "reset": "rm -rf package-lock.json && npm install",
        "reset-full": "rm -rf node_modules/* && npm run reset",
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "npm run watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "test": "jest",
        "test-ci": "jest --ci --runInBand --reporters=default --reporters=jest-junit",
        "heroku-postbuild": "npm run production"
    },
    "devDependencies": {
        "@inertiajs/inertia": "^0.8.2",
        "@inertiajs/inertia-vue": "^0.5.4",
        "@jest/globals": "^26.6.2",
        "@tailwindcss/forms": "^0.2.1",
        "@tailwindcss/typography": "^0.3.1",
        "@tailwindcss/ui": "^0.7.2",
        "@vue/test-utils": "^1.1.2",
        "autoprefixer": "^10.2.1",
        "axios": "^0.21",
        "babel-core": "^7.0.0-bridge.0",
        "babel-jest": "^26.6.3",
        "jest": "^26.6.3",
        "jest-junit": "^12.0.0",
        "jest-sonar-reporter": "^2.0.0",
        "laravel-jetstream": "^1.2.0",
        "laravel-mix": "^6.0.9",
        "lodash": "^4.17.19",
        "moment": "^2.29.1",
        "portal-vue": "^2.1.7",
        "postcss": "^8.2.4",
        "postcss-import": "^12.0.1",
        "tailwindcss": "^1.9.6",
        "vue": "^2.6.12",
        "vue-jest": "^3.0.7",
        "vue-loader": "^15.9.6",
        "vue-template-compiler": "^2.6.12"
    },
    "jest": {
        "collectCoverage": true,
        "testResultsProcessor": "jest-sonar-reporter",
        "coverageDirectory": "reports/js",
        "collectCoverageFrom": [
            "resources/js/**/*.{js,vue}"
        ],
        "moduleFileExtensions": [
            "js",
            "json",
            "vue"
        ],
        "transformIgnorePatterns": [
            "/node_modules/(?!vue)"
        ],
        "transform": {
            ".*\\.(vue)$": "vue-jest",
            ".*\\.(js)$": "babel-jest"
        },
        "roots": [
            "<rootDir>/resources/js",
            "<rootDir>/tests/Javascript"
        ],
        "moduleNameMapper": {
            "^@src/(.*)$": "<rootDir>/resources/js/$1",
            "^@test/(.*)$": "<rootDir>/tests/Javascript/$1"
        }
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ]
    },
    "jestSonar": {
        "reportPath": "reports/js"
    }
}
